<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      body {
        background-color: #1f2937; /* Dark background */
      }
    </style>
  </head>
  <body>
    <div
      class="main w-full min-h-screen flex flex-col items-center justify-center bg-zinc-900 p-4"
    >
    <h1 class="text-center text-white text-3xl font-bold mb-4">Task Manager</h1>  
      <div class="form bg-zinc-800 p-6 rounded-lg shadow-lg w-full max-w-md">
        <form class="flex flex-col " action="/create" method="post">
          <input
            type="text"
            placeholder="Enter Your Task"
            class="mb-4 p-2 rounded bg-zinc-700 text-white"
            name="title"
            required
          />
          <textarea
            placeholder="Enter Your Task Details"
            class="mb-4 p-2 rounded bg-zinc-700 text-white resize-none"
            name="details"
            required
          ></textarea>
          <button
            type="submit"
            class="bg-blue-600 text-white p-2 rounded hover:bg-blue-500 transition"
          >
            Create Task
          </button>
        </form>
      </div>
      <div class="tasks mt-6 w-full max-w-md">
        <% if (files && files.length > 0) { %>
          <% files.forEach((val) => { %>
            <div class="bg-zinc-800 p-4 rounded-lg mb-2 flex justify-between items-center">
              <div>
                <h1 class="text-white"><%= val %></h1>
                <a href="/files/<%= val %>" class="text-blue-400 hover:underline">Read more</a>
              </div>
              <a href="/edit/<%= val %>" class="text-blue-400 hover:underline">Edit File Name</a>
              <a href="/delete/<%= val %>" class="text-red-500 hover:text-red-400 transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              </a>
            </div>
          <% }); %>
        <% } else { %>
          <h3 class="text-white">No task available</h3>
        <% } %>
      </div>
    </div>
  </body>
</html>
